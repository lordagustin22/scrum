#!/bin/sh

capacidad=$(acpi -b | grep -Po '[0-9]+(?=%)')
ac_power=$(acpi -b | grep -c "Charging")
battery_full=$(acpi -b | grep -c "Full")

# Si está llena
[[ $battery_full -eq 1 && $capacidad -eq 100 ]] && notify-send "La batería está llena"
# Si está por debajo de 20
[[ $ac_power -eq 0 && $capacidad -lt 20 ]] && notify-send --urgency=critical "Cuidado, la capacidad de la bateria está por debajo de $capacidad"
