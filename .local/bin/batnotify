#!/bin/sh

export DISPLAY=:0
# export DBUS_SESSION_BUS_ADDRESS=""
# i dont know what my bus address is, and it's probably because it varies depending
# on whether you use runit or systemd, which may be the reason why the env var isn't set properly

baja=30
descargando=`acpi -b | grep -c "Discharging"`
nivel_bateria=`acpi -b | grep -P -o '[0-9]+(?=%)'`

# Use two files to store whether we've shown a notification or not (to prevent multiple notifications)
vacio_archivo=/tmp/batteryempty
lleno_archivo=/tmp/batteryfull

# Reset notifications if the computer is charging/discharging
if [ $descargando -eq 1 ] && [ -f $lleno_archivo ]; then
    rm $lleno_archivo
elif [ $descargando -eq 0 ] && [ -f $vacio_archivo ]; then
    rm $vacio_archivo
fi

# If the battery is charging and is full (and has not shown notification yet)
if [ $nivel_bateria -gt 97 ] && [ $descargando -eq 0 ] && [ ! -f $lleno_archivo ]; then
    notify-send "Bateria cargada nwn" "Nivel: $nivel_bateria" -r 9991
    touch $lleno_archivo
elif [ $nivel_bateria -le $baja ] && [ $descargando -eq 1 ] && [ ! -f $vacio_archivo ]; then
    notify-send --urgency=critical "Bateria se est√° descargando" "Cuidado duan: $nivel_bateria" -r 9991
    touch $vacio_archivo
fi
