#!/bin/sh

# Take screenshoot
sudo maim -u /tmp/screen.png
# Blurred image
sudo convert /tmp/screen.png -blur 0x12 -paint 4 -colorspace Gray -bordercolor '#970C10' -border 5 /tmp/screen.png
# or pixellate it
# mogrify -scale 10% -scale 1000% /tmp/screen.png
# Lock screen
# xset s on
# xset s 900
loginctl suspend
i3lock -e -f -c 000000 -i /tmp/screen.png -n
