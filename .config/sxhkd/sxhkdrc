# The simple hotkey daemon
# config

# Kill a process

# kill dwm
 # super + shift + q
#   pkill -SIGUSR1 dwm

# kill
# reboots sxhkd
alt + {Escape,m,4,z}
	{pkill -SIGUSR1 sxhkd,pkill -USR1 mpd && mpd,pkill -USR1 screenkey, kill -USR1 $(pidof obs)}

# open GUI
alt + {a,b,v,g,o,d}
    {anki,$BROWSER,pavucontrol,gimp,virt-manager,obs}

# open CLI
alt + {s,w,h,t,q,l}
    {screenkey,$DTERM ncmpcpp,$DTERM htop,transmission-daemon && $DTERM tremc,$DTERM calcurse,$DTERM lfub}

# open terminal itself
alt + r
    $TERMINAL

# open rofi
alt + y
    rofrun

# open appimage
alt + n
    appimage_run
